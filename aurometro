  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&display=swap" rel="stylesheet">
  <style>
    :root{
      --bg:#0f1724;
      --card:#0b1220;
      --glass: rgba(255,255,255,0.04);
      --accent1: #7c5cff;
      --accent2: #4dd0e1;
      --text:#e6eef8;
      --muted:#9fb0c8;
      --max-aura:10000;
    }
    *{box-sizing:border-box}
    html,body{height:100%}
    body{
      margin:0; font-family:Inter,system-ui,Arial,sans-serif; background: radial-gradient(1200px 600px at 10% 10%, rgba(124,92,255,0.12), transparent), radial-gradient(900px 400px at 90% 90%, rgba(77,208,225,0.08), transparent), var(--bg); color:var(--text); display:flex; align-items:center; justify-content:center; padding:32px;
    }

    .wrap{width:100%; max-width:980px}
    .card{background:linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01)); border:1px solid rgba(255,255,255,0.03); border-radius:18px; padding:28px; display:grid; grid-template-columns: 420px 1fr; gap:24px; box-shadow: 0 10px 30px rgba(2,6,23,0.6);} 

    .form{padding:12px}
    h1{margin:0 0 6px 0; font-size:22px}
    p.lead{margin:0 0 18px 0; color:var(--muted);}

    label{display:block; margin:10px 0 6px 0; color:var(--muted); font-size:13px}
    input[type=text], input[type=number], select{width:100%; padding:10px 12px; border-radius:10px; background:var(--glass); border:1px solid rgba(255,255,255,0.02); color:var(--text); outline:none; font-size:15px}
    .row{display:flex; gap:10px}
    .btn{display:inline-flex; align-items:center; gap:10px; background:linear-gradient(90deg,var(--accent1),var(--accent2)); color:#06121a; border:none; padding:10px 14px; border-radius:12px; font-weight:700; cursor:pointer; margin-top:14px}
    .btn.secondary{background:transparent; border:1px dashed rgba(255,255,255,0.04); color:var(--muted); font-weight:600}

    .aura-card{display:flex; flex-direction:column; align-items:center; justify-content:center; padding:18px; border-radius:14px; background:linear-gradient(180deg, rgba(255,255,255,0.01), rgba(255,255,255,0.00));}
    .meter{position:relative; width:320px; height:320px; display:flex; align-items:center; justify-content:center}
