    .ring .level{width:86%; height:86%; border-radius:50%; display:grid; place-items:center; backdrop-filter: blur(6px); background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01)); border:1px solid rgba(255,255,255,0.02)}

