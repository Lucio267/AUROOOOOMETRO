<body>
  <div class="wrap">
    <div class="card">
      <div class="form">
        <h1>Aurometro</h1>
        <p class="lead">Inserisci i tuoi dati e scopri quanta <strong>Aura</strong> possiedi, il valore va da 0 a <strong>10000</strong>.</p>

        <label>Nome</label>
        <input id="name" type="text" placeholder="Es. Lucia" autocomplete="off">

        <div class="row">
          <div style="flex:1">
            <label>Età</label>
            <input id="age" type="number" min="1" max="150" placeholder="25">
          </div>
          <div style="width:150px">
            <label>Sesso</label>
            <select id="sex">
              <option value="female">fessamunita</option>
              <option value="male">pisellomunito</option>
            </select>
          </div>
        </div>

        <label>Hobby</label>
        <input id="hobby" type="text" placeholder="Es. suonare, leggere, giardinaggio">

        <div style="display:flex; gap:12px; margin-top:12px; flex-wrap:wrap">
          <button class="btn" id="calcBtn">Calcola Aura</button>
          <button class="btn secondary" id="resetBtn">Azzera</button>
        </div>

        <footer>
          <div class="chip">Valore massimo: Aura Jaket = <strong>10000</strong></div>
        </footer>
      </div>

      <div class="aura-card">
        <div class="meter" id="meter">
          <div class="ring" id="ring">
            <div class="level">
              <div style="text-align:center">
                <div class="value" id="auraValue">—</div>
                <div class="label">Aura Jaket</div>
              </div>
            </div>
          </div>
        </div>

        <div class="progress"><div class="bar" id="bar"></div></div>
        <div class="tier" id="tier">Livello: —</div>
        <div class="desc" id="desc"></div>
      </div>
    </div>
  </div>

  <script>
    const MAX = 10000;
    const calcBtn = document.getElementById('calcBtn');
    const randomize = document.getElementById('randomize');
    const resetBtn = document.getElementById('resetBtn');
    const auraValue = document.getElementById('auraValue');
    const bar = document.getElementById('bar');
    const tier = document.getElementById('tier');
    const ring = document.getElementById('ring');

    function seedFromInputs(name, age, sex, hobby) {
      const s = (name||'') + '|' + (age||'') + '|' + (sex||'') + '|' + (hobby||'');
      let h = 0;
      for (let i=0;i<s.length;i++){ h = ((h<<5)-h) + s.charCodeAt(i); h |= 0; }
      return Math.abs(h);
    }

    function generateAura(name, age, sex, hobby){
      const seed = seedFromInputs(name, age, sex, hobby);
      const pseudo = (seed % 1000) / 1000;
      const rand = Math.random();
      let value = Math.floor((pseudo * 0.25 + rand * 0.75) * MAX);
      if (age){
        const a = Number(age);
        if (!isNaN(a)){
          const ageFactor = Math.max(0, 1 - Math.abs(a - 30) / 120);
          value = Math.floor(value * (0.85 + 0.3 * ageFactor));
        }
      }
      if (hobby && hobby.length>3){ value += Math.min(400, hobby.length*12); }
      value = Math.max(0, Math.min(MAX, value));
      return value;
    }

    function auraTier(value){
      if (value < 5000) return ['Aura Piquet'];
      if (value < 9000) return ['Aura'];
      return ['Aura Jaket'];
    }

    function updateUI(value){
      auraValue.textContent = value.toLocaleString();
      const pct = Math.round(value / MAX * 100);
      bar.style.width = pct + '%';
      const [t] = auraTier(value);
      tier.textContent = 'Livello: ' + t;
      const hue = 200 - Math.round(value / MAX * 200);
      ring.style.boxShadow = `0 18px 80px rgba(10,12,20,0.6), 0 0 60px rgba(${Math.round(255-hue)}, ${Math.round(100 + hue/2)}, ${200}, 0.18)`;
      while (ring.querySelectorAll('.particle').length) ring.querySelectorAll('.particle').forEach(n=>n.remove());
      const particles = Math.max(4, Math.round(value / MAX * 18));
      for (let i=0;i<particles;i++){
        const el = document.createElement('div');
        el.className='particle';
        const size = 6 + Math.round(Math.random()*18);
        el.style.width = size + 'px'; el.style.height = size + 'px';
        const angle = Math.random()*Math.PI*2; const r = 110 + Math.random()*60;
        const x = 50 + Math.cos(angle)*r/3; const y = 50 + Math.sin(angle)*r/3;
        el.style.left = `calc(${x}% - ${size/2}px)`;
        el.style.top = `calc(${y}% - ${size/2}px)`;
        el.style.opacity = 0.6 + Math.random()*0.5;
        el.style.animationDuration = `${4 + Math.random()*4}s`;
        ring.appendChild(el);
      }
    }

    calcBtn.addEventListener('click', ()=>{
      const name = document.getElementById('name').value.trim();
      const age = document.getElementById('age').value.trim();
      const sex = document.getElementById('sex').value;
      const hobby = document.getElementById('hobby').value.trim();
      const value = generateAura(name, age, sex, hobby);
      updateUI(value);
    });

    randomize.addEventListener('click', ()=>{
      const sampleNames = ['Luca','Maria','Giulia','Marco','Aisha','Tommaso','Elena','Noa'];
      const sampleHobbies = ['musica','lettura','pittura','giardinaggio','viaggi','yoga','videogiochi','cucina'];
      document.getElementById('name').value = sampleNames[Math.floor(Math.random()*sampleNames.length)];
      document.getElementById('age').value = 12 + Math.floor(Math.random()*70);
      document.getElementById('sex').value = ['female','male','nonbinary','altro'][Math.floor(Math.random()*4)];
      document.getElementById('hobby').value = sampleHobbies[Math.floor(Math.random()*sampleHobbies.length)];
      calcBtn.click();
    });

    resetBtn.addEventListener('click', ()=>{
      document.getElementById('name').value = '';
      document.getElementById('age').value = '';
      document.getElementById('hobby').value = '';
      document.getElementById('sex').value = 'female';
      auraValue.textContent = '—';
      bar.style.width = '0%';
      tier.textContent = 'Livello: —';
      while (ring.querySelectorAll('.particle').length) ring.querySelectorAll('.particle').forEach(n=>n.remove());
    });

    setTimeout(()=>document.getElementById('randomize').click(), 600);
  </script>
</body>
</html>

